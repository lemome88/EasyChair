<delta xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Proyecto_Delta_Appropiation/deltaLanguageExamples/cowpath_delta_language.xsd"
 core="http://tinyurl.com/kls2wys">
    <!--add state+ transition grammarly-->
    <modify  element="state" module="COWPATH_state">
        <add  element="state">
            <set id="https://ed.grammarly.com/register/signup/report_pale/?newv=1"/>
            <add element="transition" ><!--add or set transition??-->
                <set event="COWPATH:CLICK" />
                <set cond="grammarly2asychair"/>
                <set target= "https://www.easychair.org/conferences/submission_info_show.cgi?*"/>
            </add>
        </add>  
    </modify>
    
    <!-- add transition to an existing state -->
    <modify element="state" module="https://www.easychair.org/conferences/review_add.cgi?*">   
        <add element="transition" >
            <set event="COWPATH:CLICK" />
            <set cond="easychair2grammarly"/>
            <set target="https://ed.grammarly.com/register/signup/report_pale/?newv=1"/>
            <set script=" GoTo(&quot; http://www.grammarly.com/&quot;).Paste(&quot; $abstract&quot; ).Into(&quot; //*[@ID='maintextarea']&quot; ).Click(&quot; //*[@id='check_btn']');&quot; "/>
        </add>
    </modify>
</delta>

